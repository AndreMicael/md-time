generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model wordPressPost {
  id                  Int      @id
  slug                String   @unique
  title               String
  content             String   @db.Text
  excerpt             String?  @db.Text
  authorName          String?
  publishedAt         DateTime
  categories          String[]
  featuredImage       String?
  uagbFeaturedImageSrc Json    // Armazenará as diferentes versões da imagem
  readingTime         String?
  updatedAt           DateTime @updatedAt
  createdAt           DateTime @default(now())
  contentImages       String[] @default([])

  @@map("wordpress_posts")
}

model YouTubeVideo {
  id          String   @id
  title       String
  description String?  @db.Text
  thumbnailUrl String
  publishedAt DateTime
  videoUrl    String
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  @@map("youtube_videos")
}